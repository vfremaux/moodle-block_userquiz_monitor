{{!
    @template block_userquiz_monitor/examlaunchform

    Template displaying the launch form panel in exams. Related to examlaunchpanel.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none
}}
<!-- examlaunchform -->
<div class="exam-launch-panel">
    <div id="exam-remainings">
        <h3>{{remainingattemptsstr}}</h3>
    </div>

{{#examinstructions}}
    <p>{{{examinstructions}}}</p>
{{/examinstructions}}

{{#canexam}}
    <form name="form" id="exam-launch-form" method="GET" action="{{{formurl}}}">
        <div>
            <input type="hidden" name="blockid" value="{{blockid}}" />
            <input type="hidden" name="quizid" value="{{quizid}}" />
            <input type="hidden" name="mode" value="examination" />
            <input type="hidden" name="courseid" value="{{courseid}}" />
            <input class="active" type="submit" value="{{runexamstr}}" />
        </div>
    </form>
{{/canexam}}
{{^canexam}}
    {{{noavailableattemptsstr}}}
    <input type="button" class="dimmed" value="{{runexamstr}}" />
{{/canexam}}

</div>
<!-- /examlaunchform -->