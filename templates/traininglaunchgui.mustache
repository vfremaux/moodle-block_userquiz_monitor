{{!
    @template block_userquiz_monitor/traininglaunchgui

    Template displaying the training launcher.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none
}}
<!-- userquiz_monitor/traininglaunchgui -->
<div class="userquiz-monitor-categorycontainer">

    <div class="userquiz-monitor-row">
        <div class="userquiz-monitor-cell">
            <p>{{{runtraininghelpstr}}}</p>
        </div>
    </div>

{{#quizlist}}
    <div class="userquiz-monitor-row">
        <div class="userquiz-monitor-cell">
             {{{numberofquestionsstr}}}
            <select class="selectorsnbquestions" id="id-selector-nb-questions" name="selectornbquestions" size="1">
                {{{options}}}
            </select>
        </div>
    </div>
{{/quizlist}}

    <div class="userquiz-monitor-row">
        <div class="userquiz-monitor-cell">
             <input type="hidden" name="mode" value="test" />
             <input type="hidden" name="courseid" value="{{courseid}}" />
{{#quizlist}}
             <input type="hidden" name="quizlist" value="{{quizlist}}" />
{{/quizlist}}
             <input type="submit" id="id-training-go-button" class="enabled" value="{{runteststr}}" id="submit" {{{disabled}}} />
         </div>
     </div>
</div>
<!-- /userquiz_monitor/traininglaunchgui -->