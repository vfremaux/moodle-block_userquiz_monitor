{{!
    @template block_userquiz_monitor/catcheckbox

    Template displaying the selection checkbox of a category or a "selectall"
    additional checkbox.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none
}}
<!-- block_userquiz_monitor/catcheckbox -->
<div class="category-check">
            <input type="checkbox"
                               name="{{name}}"
                               id="{{id}}"
                               class="{{class}}"
                               style="padding-left:2px;" />
{{#selectall}}
            <span class="select-all">{{selectallcbstr}}</span>
{{/selectall}}
</div>
<!-- /block_userquiz_monitor/catcheckbox -->
